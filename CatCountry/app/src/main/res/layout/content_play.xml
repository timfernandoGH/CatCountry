<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admiralareospeedwag.catcountry.PlayActivity"
    tools:showIn="@layout/activity_play"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/map"
        android:layout_width="147dp"
        android:layout_height="99dp"
        android:text="Map"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/challenge"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/challenge"
        android:layout_width="158dp"
        android:layout_height="98dp"
        android:text="Challenge"
        android:layout_marginEnd="28dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:id="@+id/shop"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:text="Shop"
        app:layout_constraintRight_toLeftOf="@+id/challenge"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/feedpets"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/challenge"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/challenge" />

    <Button
        android:id="@+id/minigames"
        android:layout_width="149dp"
        android:layout_height="92dp"
        android:text="Minigames"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="106dp"
        app:layout_constraintLeft_toLeftOf="@+id/shop" />

    <Button
        android:id="@+id/feedpets"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:text="Feed Pets"
        android:layout_marginStart="19dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/minigames"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/minigames"
        android:layout_marginLeft="19dp" />

    <Button
        android:id="@+id/item"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="Items"
        android:layout_marginEnd="24dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="24dp" />

    <Button
        android:id="@+id/party"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Party"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/item"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.534" />

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_marginStart="39dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="39dp" />
</android.support.constraint.ConstraintLayout>
